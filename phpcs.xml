<?xml version="1.0"?>
<ruleset name="Webinar Auto-Draft Coding Standards">
    <description>PHPCS ruleset for the Webinar Auto-Draft plugin.</description>

    <!-- What to scan -->
    <file>.</file>
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/> <!-- Show sniff codes in all reports -->
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <!-- Rules: WordPress Coding Standards -->
    <config name="installed_paths" value="vendor/wp-coding-standards/wpcs"/>
    <rule ref="WordPress">
        <!-- Exclude rules that may cause issues -->
        <exclude name="WordPress.WP.I18n.MissingTranslatorsComment"/>
        <exclude name="WordPress.WP.I18n.TextDomainMismatch"/>
        <exclude name="WordPress.WP.I18n.MissingTextDomain"/>
        <exclude name="WordPress.WP.I18n.NoEmptyTranslatorsComment"/>
        <exclude name="WordPress.WP.I18n.NonSingularStringLiteralDomain"/>
        <exclude name="WordPress.WP.I18n.TextStrPosFound"/>
        <exclude name="WordPress.WP.I18n.TranslatorsCommentWrongStyle"/>
        <exclude name="WordPress.WP.I18n.UnorderedPlaceholders"/>
        <exclude name="WordPress.WP.I18n.WrongTextDomain"/>
    </rule>

    <!-- Allow for theme specific exceptions to the file name rules based on the theme hierarchy. -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="webinar-autodraft"/>
            </property>
        </properties>
    </rule>

    <!-- Verify that no WP functions are used which are deprecated or removed. -->
    <rule ref="WordPress.WP.DeprecatedFunctions">
        <properties>
            <property name="minimum_supported_version" value="5.0"/>
        </properties>
    </rule>

    <!-- Check for PHP cross-version compatibility. -->
    <config name="testVersion" value="7.2-"/>
    <rule ref="PHPCompatibilityWP">
        <exclude name="Generic.PHP.DisallowShortOpenTag.EchoFound"/>
    </rule>
</ruleset> 