<?xml version="1.0"?>
<ruleset name="Webinar Auto-Draft Coding Standards">
    <description>Custom ruleset for Webinar Auto-Draft plugin</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress"/>

    <!-- Indentation -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <!-- Multi-line function call formatting -->
    <rule ref="WordPress.WhiteSpace.ControlStructureSpacing"/>
    <rule ref="WordPress.WhiteSpace.OperatorSpacing"/>
    <rule ref="WordPress.WhiteSpace.PrecisionAlignment"/>

    <!-- End of line whitespace -->
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace"/>

    <!-- Inline comments -->
    <rule ref="Squiz.Commenting.InlineComment"/>

    <!-- Newline at end of file -->
    <rule ref="Generic.Files.EndFileNewline"/>

    <!-- Error logging -->
    <rule ref="WordPress.PHP.DevelopmentFunctions">
        <exclude name="WordPress.PHP.DevelopmentFunctions.error_log"/>
    </rule>

    <!-- File paths to check -->
    <file>./includes/</file>
    <file>./webinar-autodraft.php</file>

    <!-- Exclude paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/bin/*</exclude-pattern>
    <exclude-pattern>*/tests/phpunit/includes/*</exclude-pattern>
    <exclude-pattern>*/tests/phpunit/data/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="sp"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>
</ruleset> 