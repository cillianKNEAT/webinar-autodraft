{
    "name": "cilliankneat/webinar-autodraft",
    "description": "A WordPress plugin that automatically reverts webinar posts to draft status when their date has passed.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Cillian Bracken Conway",
            "email": "cillian.bracken-conway@kneat.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "WebinarAutoDraft\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebinarAutoDraft\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=vendor/*,node_modules/*,bin/*,tests/phpunit/includes/*,tests/phpunit/data/* --report-width=120 ./includes/ ./webinar-autodraft.php",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php --ignore=vendor/*,node_modules/*,bin/*,tests/phpunit/includes/*,tests/phpunit/data/* --report-width=120 ./includes/ ./webinar-autodraft.php",
        "phpunit": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable"
} 